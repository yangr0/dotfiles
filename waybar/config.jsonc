      "exec": "/usr/bin/python3 -u ~/.local/bin/scrolling-mpris.py",
      "format": "{}",
      "return-type": "json",
      "on-click": "playerctl play-pause"
    },
    "custom/spacer": {
      "format": "          "
    }
}
